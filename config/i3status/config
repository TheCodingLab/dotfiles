# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
    color_good = "#2AA198"
    color_bad = "#586E75"
    color_degraded = "#DC322F"
}

order += "cpu_usage"
order += "memory"
order += "disk /"
order += "disk /mnt/data"
order += "ethernet _first_"
order += "ethernet tun0"
order += "volume master"
order += "tztime local"

cpu_usage {
    format = " cpu %usage "

    separator = false
    separator_block_width = 0
}

memory {
    format = " mem %available "
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"

    separator = false
    separator_block_width = 0
}

disk "/" {
    format = " / %avail "

    separator = false
    separator_block_width = 0
}

disk "/mnt/data" {
    format = " /mnt/data %avail "
}

ethernet _first_ {
    format_up = " lan: %ip "
    format_down = " no lan "

    separator = false
    separator_block_width = 0
}

ethernet tun0 {
    format_up = " vpn: %ip "
    format_down = "vpn: disconnected "
}

volume master {
    format = " vol %volume "
    format_muted = " muted "
}

tztime local {
    format = " %H:%M %d.%m.%Y "
}
